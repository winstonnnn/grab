<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#fff"
    android:id="@+id/driver_inforation"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/Driver_Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Driver Information"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000" />
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/logo"
        android:layout_below="@+id/Driver_Info"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="#000"
        android:layout_below="@+id/Driver_Info"
        android:layout_toRightOf="@+id/logo_image"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/name_Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="#000"
        android:layout_below="@+id/Driver_Info"
        android:layout_toRightOf="@+id/name"
        android:textSize="15sp"
        />


    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact no:"
        android:textColor="#000"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/logo_image"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/contact_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="#000"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/contact"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/Bodyno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Body No:"
        android:textColor="#000"
        android:layout_below="@+id/contact"
        android:layout_toRightOf="@+id/logo_image"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/body_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="#000"
        android:layout_below="@+id/contact"
        android:layout_toRightOf="@+id/Bodyno"
        android:textSize="15sp"
        />
    <Button
        android:id="@+id/book"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Book"
        android:textColor="#000"
        android:layout_below="@+id/Bodyno"
        android:layout_toRightOf="@+id/logo_image"
        android:textSize="10sp"
        android:layout_marginTop="10dp"/>


</RelativeLayout>